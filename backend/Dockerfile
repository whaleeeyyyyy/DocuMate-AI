# /backend/Dockerfile
FROM python:3.12-slim

# set working dir
WORKDIR /app

# system deps (if any e.g. build-essential, libpq-dev) - keep small
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
 && rm -rf /var/lib/apt/lists/*

# copy and install requirements
COPY ./requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# copy application code
COPY . /app

# expose the port your FastAPI will run on
EXPOSE 8000

# environment defaults you can override in docker-compose or .env
ENV PYTHONUNBUFFERED=1
ENV UVICORN_WORKERS=1

# production entry (no --reload). Use uvicorn with host 0.0.0.0.
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
